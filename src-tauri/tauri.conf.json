{
  "productName": "Browsion",
  "version": "0.2.0",
  "identifier": "com.browsion.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Browsion - Browser Launcher",
        "width": 1200,
        "height": 900,
        "minWidth": 900,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "center": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Cross-platform browser launcher",
    "longDescription": "Manage and launch multiple Chrome browser profiles with custom configurations",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {}
}
